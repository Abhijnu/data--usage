<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iiitb.datausage.Fragments.WifiFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/wifiPieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data Transmitted"
            android:textColor="#372c24"
            android:id="@+id/tx"
            android:layout_below="@+id/wifiPieChart"
            android:layout_alignLeft="@+id/wifiPieChart"
            android:layout_alignStart="@+id/wifiPieChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data Received"
            android:textColor="#372c24"
            android:id="@+id/rx"
            android:layout_below="@+id/wifiPieChart"
            android:layout_alignRight="@+id/wifiPieChart"
            android:layout_alignEnd="@+id/wifiPieChart" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Data Transmitted"
            android:textColor="#372c24"
            android:id="@+id/tx_label"
            android:layout_below="@+id/tx"
            android:layout_alignLeft="@+id/wifiPieChart"
            android:layout_alignStart="@+id/wifiPieChart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Data Received"
            android:textColor="#372c24"
            android:id="@+id/rx_label"
            android:layout_below="@+id/rx"
            android:layout_alignRight="@+id/wifiPieChart"
            android:layout_alignEnd="@+id/wifiPieChart" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/wifiBarchart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/rx_label"/>

    </RelativeLayout>
</ScrollView>
