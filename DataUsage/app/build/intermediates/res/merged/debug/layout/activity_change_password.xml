<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iiitb.datausage.Activities.ChangePasswordActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Current Password"
        android:textColor="#372c24"
        android:ems="10"
        android:id="@+id/currentPasswordEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="New Password"
        android:textColor="#372c24"
        android:ems="10"
        android:id="@+id/newPasswordEditText"
        android:layout_below="@+id/currentPasswordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Retype Password"
        android:textColor="#372c24"
        android:ems="10"
        android:id="@+id/retypeNewPasswordEditText"
        android:layout_below="@+id/newPasswordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/button"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/retypeNewPasswordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="changePassword"/>
</RelativeLayout>
